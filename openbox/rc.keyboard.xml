<!--
   $Id$

   Openbox configuration file - Keyboard section
-->

<keyboard>

  <chainQuitKey>C-g</chainQuitKey>

  <!-- Desktop switching -->
  <keybind key="W-1"> <action name="GoToDesktop"> <to>1</to> </action> </keybind>
  <keybind key="W-2"> <action name="GoToDesktop"> <to>2</to> </action> </keybind>
  <keybind key="W-3"> <action name="GoToDesktop"> <to>3</to> </action> </keybind>
  <keybind key="W-4"> <action name="GoToDesktop"> <to>4</to> </action> </keybind>
  <keybind key="W-5"> <action name="GoToDesktop"> <to>5</to> </action> </keybind>
  <keybind key="W-6"> <action name="GoToDesktop"> <to>6</to> </action> </keybind>

  <!-- Windows management -->
  <keybind key="W-C-1">         <action name="SendToDesktop"> <to>1</to> </action> </keybind>
  <keybind key="W-C-2">         <action name="SendToDesktop"> <to>2</to> </action> </keybind>
  <keybind key="W-C-3">         <action name="SendToDesktop"> <to>3</to> </action> </keybind>
  <keybind key="W-C-4">         <action name="SendToDesktop"> <to>4</to> </action> </keybind>
  <keybind key="W-C-5">         <action name="SendToDesktop"> <to>5</to> </action> </keybind>
  <keybind key="W-C-6">         <action name="SendToDesktop"> <to>6</to> </action> </keybind>
  <keybind key="W-S-1">         <action name="SendToDesktop"> <to>1</to> <follow>no</follow> </action> </keybind>
  <keybind key="W-S-2">         <action name="SendToDesktop"> <to>2</to> <follow>no</follow> </action> </keybind>
  <keybind key="W-S-3">         <action name="SendToDesktop"> <to>3</to> <follow>no</follow> </action> </keybind>
  <keybind key="W-S-4">         <action name="SendToDesktop"> <to>4</to> <follow>no</follow> </action> </keybind>
  <keybind key="W-S-5">         <action name="SendToDesktop"> <to>5</to> <follow>no</follow> </action> </keybind>
  <keybind key="W-S-6">         <action name="SendToDesktop"> <to>6</to> <follow>no</follow> </action> </keybind>
  <keybind key="W-backslash">   <action name="RaiseLower"/> </keybind>
  <keybind key="W-f">           <action name="ToggleFullscreen"/> </keybind>
  <keybind key="W-m">           <action name="ToggleMaximize"/> <action name="Raise"/> </keybind>
  <keybind key="W-minus">       <action name="Iconify"/> </keybind>
  <keybind key="W-x">           <action name="Close"/> </keybind>

  <!-- Change focus -->
  <keybind key="W-Tab">
    <action name="NextWindow">
      <finalactions> <action name="Focus"/> <action name="Raise"/> <action name="Unshade"/> </finalactions>
    </action>
  </keybind>

  <!-- Menus -->
  <keybind key="W-space">
    <action name="ShowMenu">
      <menu>root-menu</menu>
      <position> <x>0</x> <y>-20</y> </position>
    </action>
  </keybind>
  <keybind key="W-l">
    <action name="ShowMenu">
      <menu>client-list-combined-menu</menu>
      <position> <x>0</x> <y>-20</y> </position>
    </action>
  </keybind>

  <!-- Tiling -->
  <keybind key="W-Right">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>-0</x> <y>0</y> <width>50%</width> <height>100%</height> </action>
  </keybind>
  <keybind key="W-Left">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>0</y> <width>50%</width> <height>100%</height> </action>
  </keybind>
  <keybind key="W-Up">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>0</y> <width>100%</width> <height>50%</height> </action>
  </keybind>
  <keybind key="W-Down">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>-0</y> <width>100%</width> <height>50%</height> </action>
  </keybind>
  <keybind key="W-C-Right">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>-0</x> </action>
  </keybind>
  <keybind key="W-C-Left">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> </action>
  </keybind>
  <keybind key="W-C-Up">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <y>0</y> </action>
  </keybind>
  <keybind key="W-C-Down">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <y>-0</y> </action>
  </keybind>
  <keybind key="W-KP_1">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>-0</y> <width>1/3</width> <height>1/3</height> </action>
  </keybind>
  <keybind key="W-KP_2">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>1/3</x> <y>-0</y> <width>1/3</width> <height>1/3</height> </action>
  </keybind>
  <keybind key="W-KP_3">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>2/3</x> <y>-0</y> <width>1/3</width> <height>1/3</height> </action>
  </keybind>
  <keybind key="W-KP_4">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>1/3</y> <width>1/3</width> <height>1/3</height> </action>
  </keybind>
  <keybind key="W-KP_5">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>1/3</x> <y>1/3</y> <width>1/3</width> <height>1/3</height> </action>
  </keybind>
  <keybind key="W-KP_6">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>2/3</x> <y>1/3</y> <width>1/3</width> <height>1/3</height> </action>
  </keybind>
  <keybind key="W-KP_7">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>0</y> <width>1/3</width> <height>1/3</height> </action>
  </keybind>
  <keybind key="W-KP_8">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>1/3</x> <y>0</y> <width>1/3</width> <height>1/3</height> </action>
  </keybind>
  <keybind key="W-KP_9">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>2/3</x> <y>0</y> <width>1/3</width> <height>1/3</height> </action>
  </keybind>
  <keybind key="W-C-KP_1">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>-0</y> <width>1/3</width> <height>1/3</height> </action>
  </keybind>
  <keybind key="W-C-KP_2">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>-0</y> <width>2/3</width> <height>1/3</height> </action>
  </keybind>
  <keybind key="W-C-KP_3">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>-0</y> <width>100%</width> <height>1/3</height> </action>
  </keybind>
  <keybind key="W-C-KP_4">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>-0</y> <width>1/3</width> <height>2/3</height> </action>
  </keybind>
  <keybind key="W-C-KP_5">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>-0</y> <width>2/3</width> <height>2/3</height> </action>
  </keybind>
  <keybind key="W-C-KP_6">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>-0</y> <width>100%</width> <height>2/3</height> </action>
  </keybind>
  <keybind key="W-C-KP_7">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>-0</y> <width>1/3</width> <height>100%</height> </action>
  </keybind>
  <keybind key="W-C-KP_8">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>-0</y> <width>2/3</width> <height>100%</height> </action>
  </keybind>
  <keybind key="W-C-KP_9">
    <action name="Unmaximize"/>
    <action name="MoveResizeTo"> <x>0</x> <y>-0</y> <width>100%</width> <height>100%</height> </action>
  </keybind>
  <keybind key="W-v"> <action name="Execute"> <command>wmprocs tile v</command> </action> </keybind>
  <keybind key="W-h"> <action name="Execute"> <command>wmprocs tile h</command> </action> </keybind>

  <!-- System -->
  <keybind key="A-C-Delete"> <action name="Execute"> <command>xscreensaver-command -lock </command> </action> </keybind>
  <keybind key="W-C-c">      <action name="Execute"> <command>dmenu-perf</command> </action> </keybind>
  <keybind key="W-S-h">      <action name="Execute"> <command>apm -Z                     </command> </action> </keybind>
  <keybind key="W-S-s">      <action name="Execute"> <command>apm -z                     </command> </action> </keybind>

  <!-- Window manager goodies -->
  <keybind key="W-C-q"> <action name="Restart"/> </keybind>
  <keybind key="W-C-r"> <action name="Reconfigure"/> </keybind>
  <keybind key="W-F1">  <action name="Execute"> <command>x-terminal-emulator -e man openbox</command> </action> </keybind>
  <keybind key="W-S-q"> <action name="Execute"> <command>dmenu-session-logout              </command> </action> </keybind>
  <keybind key="W-b">   <action name="Execute"> <command>dmenu-filebrowser                 </command> </action> </keybind>
  <keybind key="W-o">   <action name="Execute"> <command>activewin_obxprop                 </command> </action> </keybind>
  <keybind key="W-p">   <action name="Execute"> <command>activewin_xprop                   </command> </action> </keybind>
  <keybind key="W-r">   <action name="Execute"> <command>dmenu-root                        </command> </action> </keybind>
  <keybind key="W-t">   <action name="Execute"> <command>tmux_pane_search                  </command> </action> </keybind>
  <keybind key="W-w">   <action name="Execute"> <command>win_search                        </command> </action> </keybind>

  <!-- Multimedia keys -->
  <keybind key="4C-m">             <action name="Execute"> <command>mixerctl -q -t outputs.master.mute</command> </action> </keybind>
  <keybind key="AudioMute">        <action name="Execute"> <command>mixerctl -q -t outputs.master.mute</command> </action> </keybind>
  <keybind key="4CS-v">            <action name="Execute"> <command>mixerctl -q outputs.master=+10    </command> </action> </keybind>
  <keybind key="AudioRaiseVolume"> <action name="Execute"> <command>mixerctl -q outputs.master=+10    </command> </action> </keybind>
  <keybind key="4C-v">             <action name="Execute"> <command>mixerctl -q outputs.master=-10    </command> </action> </keybind>
  <keybind key="AudioLowerVolume"> <action name="Execute"> <command>mixerctl -q outputs.master=-10    </command> </action> </keybind>

  <!-- External app launchers -->
  <keybind key="W-d">        <action name="Execute"> <command>dmenu_run-cust -p Run:              </command> </action> </keybind>
  <keybind key="W-S-Return"> <action name="Execute"> <command>x-terminal-emulator                 </command> </action> </keybind>
  <keybind key="W-S-b">      <action name="Execute"> <command>x-web-browser                       </command> </action> </keybind>
  <keybind key="W-S-c">      <action name="Execute"> <command>dmenu-calc                          </command> </action> </keybind>
  <keybind key="W-S-d">      <action name="Execute"> <command>dmenu-xrandr                        </command> </action> </keybind>
  <keybind key="W-S-f">      <action name="Execute"> <command>x-terminal-emulator -e ranger       </command> </action> </keybind>
  <keybind key="W-S-k">      <action name="Execute"> <command>dmenu-kbd                           </command> </action> </keybind>
  <keybind key="W-S-m">      <action name="Execute"> <command>x-terminal-emulator -e mutt         </command> </action> </keybind>
  <keybind key="W-S-p">      <action name="Execute"> <command>play-url -g -d -p                   </command> </action> </keybind>
  <keybind key="W-S-r">      <action name="Execute"> <command>dmenu-timer                         </command> </action> </keybind>
  <keybind key="W-S-t">      <action name="Execute"> <command>x-terminal-emulator -e tmux-launcher</command> </action> </keybind>

</keyboard>

